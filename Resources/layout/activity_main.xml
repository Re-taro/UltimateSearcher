<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    android:gravity="bottom">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="Orientation,UselessParent"
        android:gravity="center">

        <EditText
            android:layout_width="0dp"
            android:layout_height="77.5dp"
            android:layout_weight="4"
            android:hint="検索..."
            android:imeOptions="actionSearch"
            android:inputType="text | textAutoCorrect"
            android:id="@+id/search_bar" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="77.5dp"
            android:layout_weight="1"
            android:background="@drawable/button_search"
            android:id="@+id/button_search"/>

     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="20dp"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:id="@+id/result_view" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageButton
            android:id="@+id/button_google"
            android:layout_width="0dp"
            android:layout_height="70.0dp"
            android:layout_weight="1"
            android:background="@drawable/button_google" />

        <ImageButton
            android:id="@+id/button_twitter"
            android:layout_width="0dp"
            android:layout_height="70.0dp"
            android:layout_weight="1"
            android:background="@drawable/button_twitter" />

        <ImageButton
            android:id="@+id/button_qiita"
            android:layout_width="0dp"
            android:layout_height="70.0dp"
            android:layout_weight="1"
            android:background="@drawable/button_qiita" />

        <ImageButton
            android:id="@+id/button_youtube"
            android:layout_width="0dp"
            android:layout_height="70.0dp"
            android:layout_weight="1"
            android:background="@drawable/button_youtube" />

    </LinearLayout>

</LinearLayout>